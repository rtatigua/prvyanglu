{
  "name": "angular.dev",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "server": "json-server --watch db.json",
    "dev": "npm run server & npm start",
    "seed:firestore:emulator": "$FIRESTORE_EMULATOR_HOST='localhost:8080' && $GCLOUD_PROJECT='angularquests' && node scripts/seed-firestore.js --file db.json --subcollections",
    "seed:firestore:prod": "node scripts/seed-firestore.js --file db.json --key ./service-account.json --subcollections"
    ,
    "deploy": "ng build --configuration production && npx firebase deploy --only hosting"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^21.0.1",
    "@angular/compiler": "^21.0.1",
    "@angular/core": "^21.0.1",
    "@angular/fire": "^20.0.1",
    "@angular/forms": "^21.0.1",
    "@angular/platform-browser": "^21.0.1",
    "@angular/router": "^21.0.1",
    "firebase": "^12.6.0",
    "firebase-admin": "^13.6.0",
    "minimist": "^1.2.8",
    "rxjs": "^7.8.0",
    "tslib": "^2.6.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.1",
    "@angular/cli": "^21.0.1",
    "@angular/compiler-cli": "^21.0.1",
    "@types/node": "^18.16.0",
    "json-server": "^1.0.0-beta.3",
    "ts-node": "~10.9.1",
    "typescript": "~5.9.3"
  }
}
